# Configuration file for copying headers to build output
# This is used by scripts/build_headers.py

# Relative path from this file to the root folder to copy headers from
SOURCE:
	src/River


# Files/directories to copy from the source directory (recursive) regardless of
# them being in the exclude list or does not match the file extension filter
INCLUDE:
	River/External/glm/LICENSE


# Files/directories not to copy from the source directory
EXCLUDE:
	River/Audio/AL.h
	River/Mouse/MouseController.h
	River/Keyboard/KeyboardController.h
